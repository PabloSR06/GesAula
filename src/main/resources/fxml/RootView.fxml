                              <HBox alignment="TOP_RIGHT" fillHeight="false" spacing="5.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <Button fx:id="deleteAlumnoButton" mnemonicParsing="false" onAction="#onDeleteAlumnoAction" text="Eliminar">
